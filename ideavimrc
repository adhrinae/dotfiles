noremap j gj
noremap k gk

ino jk <esc>
cno jk <c-c>
vno v <esc>

let mapleader=","
map <Space> :
nmap <Leader><CR> :nohlsearch<cr>

nmap <tab> :action NextSplitter<CR>
nmap <leader>h :action PreviousTab<CR>
nmap <leader>l :action NextTab<CR>

set surround
set hlsearch
set incsearch
set ignorecase smartcase
set rnu
